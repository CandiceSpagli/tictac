<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body >
    <!--header navbar-->
    <%- include('header') %>
    <div class="color">
   
    <div class="container">
      <div class="row" id="sign">
        <!--    SIGN IN AREA    -->
        <div class=" col-12 col-sm-3 offset-sm-3 text-center">

          <div class="formArea">

            <h4 class="titleForm text-white p-5">Sign-in :</h4>

            <form action="/sign-in" method="POST">
              <div class="form-group">
                <label for="exampleInputEmail1"></label>
                <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1"></label>
                <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
              </div>
              <p></p>
              <button type="submit" class="btn btn-danger">Confirm</button>
            </form>

          </div>

        </div>
        <!-- SIGN UP AREA -->
        <div class="col-12 col-sm-3 text-center">

          <div class="formArea">
            <h4 class="titleForm text-white p-5">Sign-up :</h4>

            <form action="/sign-up" method="POST">
              <div class="form-group">
                <label for="Name"></label>
                <input name="usernameFromFront" type="text" class="form-control" placeholder="Name">
              </div>
              <div class="form-group">
                <label for="firstname"></label>
                <input name="userfirstnameFromFront" type="text" class="form-control" placeholder="Firstname">
              </div>
              <div class="form-group">
                <label for="email"></label>
                <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
              </div>
              <div class="form-group">
                <label for="password"></label>
                <input name="passwordFromFront" type="password" class="form-control"  placeholder="Password">
              </div>
              
              <button type="submit" class="btn btn-danger">Confirm</button>
            </form>
          </div>
        </div>
    </div>
  </div>



    </div>
  </body>
</html>
